extends ../layout-min

block content
    .row
      .card.bg-secondary.shadow        
        .card-body
          form(method="post",action="/items/update/"+item.id)
            h6.heading-small.text-muted.mb-4 Product information
            .pl-lg-4
              .row
                .col-lg-4
                  .form-group.focused
                    label.form-control-label(for='name') Name
                    input#name.form-control.form-control-alternative(type='text' placeholder='Dispenser' name='name' value=item.name required)
                .col-lg-4
                  .form-group
                    label.form-control-label(for='quantity') Quantity
                    input#quantity.form-control.form-control-alternative(type='text' placeholder='Quantity' name='quantity' required value=item.quantity)
                .col-lg-4
                  .form-group.focused
                    label.form-control-label(for='productcode') productCode
                    input#productcode.form-control.form-control-alternative(type='text' placeholder='Product Code' name='productcode' required value=item.productCode)
                .col-lg-4
                  .form-group.focused
                    label.form-control-label(for='productcode') Price
                    input#price.form-control.form-control-alternative(type='text' placeholder='Price' name='price' required value=item.price)
                .col-lg-4
                  .form-group.focused
                    label.form-control-label(for='photo') Photo
                    input#photo.form-control.form-control-alternative(type='file')
                .col-lg-4
                  .form-group.focused
                    label.form-control-label(for='category') Source Branch
                    select#branch.form-control.form-control-alternative(name="branch")
                      if(item.branchId)
                        option(value=item.branch.id)
                          =item.branch.name
                      else
                        option(value)
                        | --select Route--
                      each b in branches 
                        option(value=b.id)
                          =b.name 
              .row 
                .col-md-4 
                  .form-group.focused.form-control-label 
                  label.form-control-label(for='size') Size (Cubic Meters)
                  input#size.form-control.form-control-alternative(type='text' placeholder='Size' value=item.size name='size' required)
                .col-md-8 
                  .form-group.focused
                    label.form-control-label Item Description
                    textarea.form-control.form-control-alternative(rows='4' placeholder='A few words about you ...' name='description')
                      =item.description
            hr.my-3
            h6.heading-small.text-muted.mb-4 Customer information
            .pl-lg-4
              .row
                .col-lg-4
                  .form-group
                    label.form-control-label(for='custName') Customer Name
                    input#custName.form-control.form-control-alternative(type='text' value=item.destCustomerName name='custName' required)
                .col-lg-4
                  .form-group.focused
                    label.form-control-label(for='custPhone') Customer Phone
                    input#custPhone.form-control.form-control-alternative(type='text' placeholder='Customer Phone' value=item.destCustomerPhone name='custPhone' required)
                .col-lg-4
                  .form-group.focused
                    label.form-control-label(for='custPhone') Customer Destination
                    input#custDestination.form-control.form-control-alternative(type='text' placeholder='Customer Destination' value=item.destCustomerDest name='custDest' required)
                .col-lg-4
                  .form-group.focused
                    label.form-control-label(for='route') Route
                    select#route.form-control.form-control-alternative(name="route")
                      if(item.routeId)
                        option(value=item.route.id)
                          =item.route.name
                      else
                        option(value)
                        | --select Route--
                      each b in routes 
                        option(value=b.id)
                          =b.name 
              
              .form-group.focused.form-control-label
                    label Customer Description
                    textarea.form-control.form-control-alternative(rows='4' placeholder='A few words about you ...' name='custdescription')
                      =item.details 
              
              .row
                .text-center
                  button.btn.btn-success.my-4(type='submit') Update
