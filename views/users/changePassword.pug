extends ../layout-min

block content
    .row
      .card.bg-secondary.shadow        
        .card-body
          form(method="post",action="/changepassword")
            h6.heading-small.text-muted.mb-4 Change Password
            .pl-lg-4
              .row
                .col-lg-12
                  .form-group.focused
                    label.form-control-label(for='currentPassword') Current Password
                    input#currentPassword.form-control.form-control-alternative(type='password' placeholder='' name='currentPassword' required)
                .col-lg-12
                  .form-group
                    label.form-control-label(for='newPassword') New Password
                    input#newPassword.form-control.form-control-alternative(type='password' placeholder='' name='newPassword' required)
                .col-lg-12
                  .form-group.focused
                    label.form-control-label(for='confirmPassword') Confirm Password
                    input#confirmPassword.form-control.form-control-alternative(type='password' placeholder='' required name='confirmPassword') 
              .row
                .text-center
                  button.btn.btn-success.my-4(type='submit') Change Password
